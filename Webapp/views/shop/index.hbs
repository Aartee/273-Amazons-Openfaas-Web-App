<script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script src="/javascripts/star-rating.js" type="text/javascript"></script>

<script type="text/javascript">
</script>
{{# each products}}
    <div class="row">
        {{# each this}}
            <div class="col-sm-9 col-md-3">
                <div class="thumbnail">
                    <img src="{{this.img}}" alt="..." class="img-responsive">
                    <div class="caption">
                        <h3>{{this.name}}</h3>
                        <p class="description">{{this.description}}</p>
                        <p id="he">
                            <input id="input-21e" value="{{this.avg_ratings}}" type="text" class="rating" data-min=0 data-max=5 data-step=0.5 data-size="xs" title="">
                        </p>
                        <div class="clearfix">
                            <div class="price pull-left">${{this.price}}</div>

                            <a href="/productcatalog/addtocart/{{this.product_id}}" onclick="alert('item added'); return true;" class="btn btn-default pull-right btn-success" role="button">Buy</a>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
{{/each}}


